@model voter20_21.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h4>User Login</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Account" asp-action="Login">
            <div class="text-danger">@Html.ValidationSummary(true, "A regisztráció sikertelen!")</div>
            <div class="form-group">
                <label asp-for="email" class="control-label">email</label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label">password</label>
                <input asp-for="password" class="form-control" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RememberLogin" class="control-label">remember login</label>
                <input asp-for="RememberLogin" class="form-control" />
                <span asp-validation-for="RememberLogin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="bejelentkezés" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home">Back to homepage</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
